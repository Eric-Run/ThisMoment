<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="10dp"
        android:right="10dp">
        <shape>
            <solid android:color="#f2f0f0" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:text="日期："
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:id="@+id/bill_add_date"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_card"
            android:paddingLeft="10dp"
            android:text="2020-03-24"
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:text="备注："
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/bill_add_remark"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_card"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:text="不知火舞新皮肤"
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:text="金额："
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/bill_add_sum"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_card"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="71"
            android:textSize="18dp"
            android:textColor="#000000"
            android:inputType="number"
            android:gravity="center|left"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/bill_add_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/bill_add_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/bill_add_in"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:gravity="center">
        <Button
            android:visibility="gone"
            android:id="@+id/bill_add_clear"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="清空"
            android:background="@drawable/background_card"/>
        <Button
            android:id="@+id/bill_add_save"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="保存"
            android:background="@drawable/background_card"/>
    </LinearLayout>


</LinearLayout>